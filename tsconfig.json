{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "useDefineForClassFields": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./build",
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "src/*"
       ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
